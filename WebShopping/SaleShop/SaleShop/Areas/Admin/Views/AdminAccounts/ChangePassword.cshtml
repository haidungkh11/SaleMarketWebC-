@model SaleShop.Areas.Admin.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="myaccount-details">
    <form asp-controller="AdminAccounts" asp-action="ChangePassword" method="post" class="myaccount-form">
        <div class="row">            
            <div class="form-group col-md-6">
                <label class="font-weight-semibold" for="PasswordNow">Mật khẩu hiện tại</label>
                <input type="text" class="form-control" asp-for="PasswordNow">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label class="font-weight-semibold" for="Password">Mật khẩu mới</label>
                <input type="text" class="form-control" asp-for="Password">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label class="font-weight-semibold" for="ConfirmPassword">Nhập lại Mật khẩu mới</label>
                <input type="text" class="form-control" asp-for="ConfirmPassword">
            </div>            
        </div>
        <div class="single-input">
            <button class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0" type="submit">
                <span>Lưu thay đổi</span>
            </button>
        </div>
    </form>
</div>

